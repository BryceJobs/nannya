<!-- Start page header -->
	<section id="page-head">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">		
					<h2>Nous Contacter</h2>
					<p>
					Nous serons plus que ravis de repondre a toute vos preocupations alors n'hesitez pas a nous laisser un message. nous reviendrons vers vous au plus vite. 
					<!-- Vous desirez
					 <button type="button" class="btn btn-dark btn-lg">Recruter</button> ou 
					 
					 <%= link_to "Vous enregistrer comme candidat", new_candidate_request_path, class: 'btn btn-dark btn-lg ' %> -->
					</p>
				</div>
			</div>
		</div>	
	</section>
	<!-- End page header -->
	
	<!-- Start contain -->
	<section id="top" class="contain clearfix">
		<div class="container">
			<div class="row">
				<div class="col-lg-8 well">	
						<h4 class="heading"><span>Ecrivez Nous</span><span class="left"></span></h4>
						<%= form_for @request do |f| -%>



							  <div class="form-group">
							  	<%= f.label :nom, "Nom" %><span>&#40; Requis &#41;</span>
							  	<%= f.text_field :nom, class: "form-control",  required: 'required'  %>
							  </div>

							  <div class="form-group">
							  	<%= f.label :telephone, "Telephone" %><span>&#40; Requis &#41;</span>
							  	<%= f.text_field :telephone, class: "form-control",  required: 'required'  %>
							  </div>

							  <div class="form-group">
							  	<%= f.label :email, "Email" %><span>&#40; Requis &#41;</span>
							  	<%= f.email_field :email, class: "form-control",  required: 'required'   %>
							  </div>

							    <div class="form-group">
							  	<%= f.label :sujet, "Sujet" %>
							  	<%= f.text_field :sujet, class: "form-control"  %>
							  </div>

							  <div class="form-group">
							  	<%= f.label :message, "Message" %> <span>&#40; Requis &#41;</span>
							  	<%= f.text_area :message, class: "form-control", rows: 9,  required: 'required' %>
							  </div>

							  <%= f.submit "Envoyer", :disable_with => 'En cours...', class: 'btn btn-red btn-lg' %>

							  
						  
						<% end -%>
				</div>
				<div class="col-lg-4">
					<div class="contact-box">
						<p>
						<label>Address :</label>
						Derriere Pharmacie Blue, Hopital General, Yde
						</p>
						<p>
						<label>Phone :</label>
						683-867-665 ou 694-840-049
						</p>	
						<p>
						<label>Email :</label>
						lecebri@gmail.com ou  inbox@nannya.com 
						</p>						
					</div>
				</div>
			</div>		
		</div>
	</section>
	<!-- End contain -->


